<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/general_padding"
    tools:context=".fragments.ConceptFragment">


    <RelativeLayout
        android:layout_weight="7"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_fit"
            android:text="Une salle de fitness"
            android:textSize="@dimen/frag_content"
            android:textColor="@color/bewell"
            android:textStyle="bold"
            android:layout_margin="@dimen/inside_padding"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_cours_coll"
            android:text="Des cours collectifs"
            android:textSize="@dimen/frag_content"
            android:textColor="@color/bewell"
            android:textStyle="bold"
            android:layout_margin="@dimen/inside_padding"
            android:gravity="center"
            android:layout_below="@id/tv_fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_cours_indiv"
            android:text="Des cours individuels"
            android:textSize="@dimen/frag_content"
            android:textColor="@color/bewell"
            android:textStyle="bold"
            android:layout_margin="@dimen/inside_padding"
            android:gravity="center"
            android:layout_below="@id/tv_cours_coll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_param"
            android:text="Un centre paramÃ©dical"
            android:textSize="@dimen/frag_content"
            android:textColor="@color/bewell"
            android:textStyle="bold"
            android:layout_margin="@dimen/inside_padding"
            android:gravity="center"
            android:layout_below="@id/tv_cours_indiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>