<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragments.SeuilAnaerobieFragment">

    <EditText
        android:id="@+id/et_anaer_fcminput"
        android:hint="Votre FCM (calcul préalable)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_anaer_calcul"
        android:text="Calcul"
        android:layout_below="@id/et_anaer_fcminput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_anaer_resultat"
        android:layout_below="@id/btn_anaer_calcul"
        android:hint="Votre seuil d'anaérobie"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>