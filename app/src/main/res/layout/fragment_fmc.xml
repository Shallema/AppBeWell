<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.FMCFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:padding="@dimen/padding_grid">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_espaceperso"
            android:layout_width="match_parent"
            android:layout_height="459dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="272dp"
                android:layout_height="374dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_fcm_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Entrez votre âge"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/btn_fcm_femme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_fcm_age"
                    android:text="Femme" />

                <Button
                    android:id="@+id/btn_fcm_homme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_fcm_femme"
                    android:text="Homme" />


                <TextView
                    android:id="@+id/tv_fcm_resultat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_fcm_homme"
                    android:gravity="center"
                    android:hint="Votre fréquence cardiaque maximale est: "
                    android:textSize="20dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</LinearLayout>