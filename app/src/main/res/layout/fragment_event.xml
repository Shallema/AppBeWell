<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10"
    android:id="@+id/rl_event"
    tools:context=".fragments.EventFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_weight="2.5"
        android:padding="@dimen/padding_grid">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_espaceperso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|fill_horizontal"
                    android:text="Evénements à venir"
                    android:textAlignment="center"
                    android:textColor="@color/bewell"
                    android:textSize="@dimen/frag_title"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="7"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_event_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom de l'événement"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_event_descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_event_lieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lieu"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_event_debut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_event_inscr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inscription nécessaire?"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_margin="10dp"/>

    </LinearLayout>

</LinearLayout>



